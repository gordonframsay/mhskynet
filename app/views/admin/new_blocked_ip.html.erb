<div style="padding: 0px 30px">

<h3>New Blocked IP</h3>

<style>
 td {
        padding: 2px 10px;
}

</style>


<%= form_for @blocked_ip, {:url => "/admin/new_blocked_ip", method: "post" } do |f| %>
<table>
<tr>
 <th>IP Address</th>
 <td><%= f.text_field :address %></td>
</tr>
<tr>
 <th>Reason</th>
 <td><%= f.text_field :reason %></td>
</tr>
<tr>
 <td colspan="2" align="center"><input type="submit" value="Save New Blocked IP" /></td>
</tr>
</table>

<% end %>

</div>
