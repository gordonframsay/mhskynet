<div class="container-fluid">
<h1>New Hang Man Game</h1>

<h3>To start a new game, enter a phrase!</h3>

<%= form_tag %>
Phrase: <input name="phrase" />
<input type="submit" />
</form>

</div>


<h2>Active Games:</h3>

<% @games.each do |g| %>

<p><a href="/hang_man/game/<%= g.id %>">Game <%= g.id %></a></p>

<% end %>
