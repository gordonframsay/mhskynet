    <h3>Current Movie: <i><%= @movie_title %></i></h3>

<% if (@movie_time > Time.now) %>
    <h3>Starts At: <i><%= @movie_time.in_time_zone("America/Los_Angeles").strftime("%b %e, %Y %l:%M %p") %> PST</i></h3>
<% else %>
    <h3>Started At: <i><%= @movie_time.in_time_zone("America/Los_Angeles").strftime("%b %e, %Y %l:%M %p") %> PST</i></h3>
<% end %>

    <center>
        <div id="player"></div>
    </center>

    <script>
      var tag = document.createElement('script');

      tag.src = "https://www.youtube.com/iframe_api";
      var firstScriptTag = document.getElementsByTagName('script')[0];
      firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

      var player;
      function onYouTubeIframeAPIReady() {
        player = new YT.Player('player', {
          height: '576',
          width: '768',
          videoId: '<%= @youtube_video_id %>',
          events: {
            'onReady': onPlayerReady
          }
        });
      }

      function onPlayerReady(event) {
<% if (@movie_time > Time.now) %>
        setTimeout(event.target.playVideo(), <%= (@movie_time - Time.now).round %>);
<% else %>
        event.target.seekTo(<%= (Time.now - @movie_time).round %>);
        event.target.playVideo();
<% end %>
      }

    </script>


