
    <%= render :partial => 'shared/navigation' %>

    <div style="padding: 0px 30px">
	<h2>MH Skynet - Game - <%= @game_room.title %></h2>
    </div>

<center>
<% if @game_room.image_url %>
<p><img src="<%= @game_room.image_url %>" border="0" width="1024" /></p>
<% end %>

<% if @game_room.description %>
<p><%= @game_room.description %></p>
<% end %>

<table>
 <tr>
  <td>&nbsp;</td>
  <td align="center">
	<% if @game_room.north_room_id %>
	<a href="<%= @game_room.north_room_id %>"><span class="glyphicon glyphicon-arrow-up"></span><br />Go North</a>
	<% else %>
	<span class="glyphicon glyphicon-ban-circle"></span>
	<% end %>
  </td>
  <td>&nbsp;</td>
 </tr>
 <tr>
  <td height="50" width="100">
	<% if @game_room.west_room_id %>
	<a href="<%= @game_room.west_room_id %>"><span class="glyphicon glyphicon-arrow-left"></span> Go West</a>&nbsp;
	<% else %>
	<span class="glyphicon glyphicon-ban-circle"></span>
	<% end %>
  </td>
  <td align="center"><span class="glyphicon glyphicon-screenshot"></span></td>
  <td align="right" width="100">
	<% if @game_room.east_room_id %>
	<a href="<%= @game_room.east_room_id %>">Go East <span class="glyphicon glyphicon-arrow-right"></span></a>&nbsp;
	<% else %>
	<span class="glyphicon glyphicon-ban-circle"></span>
	<% end %>
  </td>
 </tr>
 <tr>
  <td>&nbsp;</td>
  <td align="center">
	<% if @game_room.south_room_id %>
	<a href="<%= @game_room.south_room_id %>">Go South<br /><span class="glyphicon glyphicon-arrow-down"></span></a>
	<% else %>
	<span class="glyphicon glyphicon-ban-circle"></span>
	<% end %>
  </td>
  <td>&nbsp;</td>
 </tr>
<table>

<% if @superuser %>
<p>&nbsp;</p>

<p><a href="/game/1/edit_room/<%= @game_room.id.to_s %>" >Edit Room</a></p>

<p><a href="/game/1/add_room" >Add Room</a></p>
<% end %>

</center>

